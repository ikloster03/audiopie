{
  "appId": "com.example.audiopie",
  "productName": "AudioPie",
  "asar": true,
  "asarUnpack": ["node_modules/ffmpeg-static/**/*"],
  "publish": {
    "provider": "github",
    "owner": "ikloster03",
    "repo": "audiopie"
  },
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    {
      "from": "src/i18n/locales",
      "to": "src/i18n/locales",
      "filter": ["*.json"]
    }
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg", "zip"],
    "category": "public.app-category.music",
    "icon": "assets/audiopie.png"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}",
    "icon": "assets/audiopie.ico"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": ["AppImage"],
    "artifactName": "${productName}_${version}.${ext}",
    "category": "Audio",
    "icon": "build/icons",
    "synopsis": "Build m4b audiobooks from mp3 tracks",
    "description": "AudioPie - build m4b audiobooks from mp3 tracks with chapter editing"
  },
  "extraResources": [
    {
      "from": "assets",
      "to": ".",
      "filter": ["**/*"]
    }
  ]
}
