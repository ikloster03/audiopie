{
  "appId": "com.example.audiopie",
  "productName": "AudioPie",
  "icon": "assets/icon.png",
  "asar": true,
  "asarUnpack": ["node_modules/ffmpeg-static/**/*"],
  "publish": null,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    {
      "from": "src/i18n/locales",
      "to": "src/i18n/locales",
      "filter": ["*.json"]
    }
  ],
  "mac": {
    "artifactName": "${productName}_${version}.${ext}",
    "target": ["dmg"],
    "category": "public.app-category.music"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "artifactName": "${productName}_${version}.${ext}"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "target": ["AppImage"],
    "artifactName": "${productName}_${version}.${ext}",
    "category": "Audio"
  },
  "extraResources": [
    {
      "from": "assets",
      "to": ".",
      "filter": ["**/*"]
    }
  ]
}
